<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telaConversao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textConversor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="CONVERSOR"
            android:textAlignment="center"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textInsiraValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70sp"
            android:text="Insira o valor"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText

            android:id="@+id/editTextValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp">

            <RadioButton
                android:id="@+id/rdDolar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="US$ USD" />

            <RadioButton
                android:id="@+id/rdEuro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="€ EURO" />

            <RadioButton
                android:id="@+id/rdYemen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¥  YEMEN" />
        </RadioGroup>

        <TextView
            android:id="@+id/Resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:textAlignment="center"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnResultado"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginStart="50sp"
            android:layout_marginTop="80sp"
            android:layout_marginEnd="50sp"
            android:text="Button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>